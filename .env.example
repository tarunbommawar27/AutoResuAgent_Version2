# ============================================
# AutoResuAgent Configuration
# ============================================
# Copy this file to .env and fill in your values
#
# Note: .env is gitignored - never commit API keys!
# ============================================

# ===== API Keys =====
# Obtain from: https://platform.openai.com/api-keys
OPENAI_API_KEY=ssk-ant-your-OPENAI-key-here


# Obtain from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here


# ===== LLM Configuration =====
# Which provider to use by default: "openai" or "anthropic"
LLM_PROVIDER=openai

# OpenAI models: gpt-4o, gpt-4o-mini, gpt-4-turbo, etc.
MODEL_OPENAI=gpt-4o-mini

# Anthropic models: claude-3-5-sonnet-latest, claude-3-5-haiku-latest, etc.
MODEL_ANTHROPIC=claude-3-5-sonnet-latest

# Temperature for generation (0.0 = deterministic, 2.0 = very creative)
LLM_TEMPERATURE=0.7

# Maximum tokens to generate per request
LLM_MAX_TOKENS=1500


# ===== Embedding Configuration =====
# Sentence-BERT model for semantic search
# Options: all-MiniLM-L6-v2, all-mpnet-base-v2, etc.
EMBEDDING_MODEL=all-MiniLM-L6-v2


# ===== Retrieval Configuration =====
# Number of relevant experiences to retrieve from FAISS
RETRIEVAL_TOP_K=5


# ===== Agent Configuration =====
# Maximum retry attempts when validation fails
MAX_RETRIES=3

# Maximum number of jobs to process concurrently
CONCURRENCY_LIMIT=5


# ===== Paths =====
# Base directories (relative to project root)
DATA_DIR=./autoresuagent/data
TEMPLATES_DIR=./autoresuagent/data/templates
OUTPUT_DIR=./autoresuagent/outputs
LOGS_DIR=./autoresuagent/outputs/logs


# ===== Logging =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
